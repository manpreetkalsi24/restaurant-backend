extends ../layout


block content
  h1 Menu List

  a(href="/admin/menu/add" class="btn btn-success" style="margin-bottom: 15px;") Add New Item

  if menu.length
    table.table.table-striped.table-bordered
      thead
        tr
          th(style="width: 100px; text-align: center;") Image
          th Name
          th Description
          th Price
          th(style="width: 180px; text-align: center;") Actions
      tbody
        each item in menu
          tr
            td(style="text-align: center;")
              if item.image
                img(src=item.image alt=item.name width="80" height="60" style="object-fit: cover; border-radius: 5px;")
              else
                span(style="color: #aaa; font-style: italic;") No image
            td #{item.name}
            td #{item.description}
            td $#{item.price.toFixed(2)}
            td(style="text-align: center;")
              a(href=`/admin/menu/edit?itemId=${item._id}` class="btn btn-primary btn-sm") Edit
              a(href=`/admin/menu/delete?itemId=${item._id}` class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this item?')") Delete
  else
    p(style="color: gray; text-align: center; margin-top: 20px;") No menu items found.
