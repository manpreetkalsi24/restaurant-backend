extends ../layout.pug

block content
  h1.page-title Edit Reservation

  .form-card
    form(
      method="POST",
      action=`/admin/reservation/edit/${editRes._id}`
    )

      .form-group
        label(for="name") Name
        input(
          type="text",
          id="name",
          name="name",
          value=editRes.name,
          required
        )

      .form-group
        label(for="phone") Phone number
        input(
          type="text",
          id="phone",
          name="phone",
          value=editRes.phone
        )

      .form-group
        label(for="email") Email
        input(
          type="email",
          id="email",
          name="email",
          value=editRes.email,
          required
        )

      .form-group
        label(for="date") Date
        input(
          type="date",
          id="date",
          name="date",
          value=editRes.date,
          required
        )

      .form-group
        label(for="time") Time
        input(
          type="time",
          id="time",
          name="time",
          value=editRes.time,
          required
        )

      .form-group
        label(for="guests") Number of guests
        input(
          type="number",
          id="guests",
          name="guests",
          min="1",
          value=editRes.guests,
          required
        )

      .form-group
        label(for="message") Message
        textarea(
          id="message",
          name="message",
          rows="4"
        )= editRes.message

      .form-actions
        button.btn-primary(type="submit")
          |  Update Reservation

        a.btn-secondary(href="/admin/reservation")
          |  Cancel
