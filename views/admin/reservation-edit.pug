extends ../layout.pug

block content
  h1 Edit Reservation
  form(action="/admin/reservation/edit/submit" method="POST")
    input(type="hidden" name="resId" value=editRes._id)

    div.form-group
      label(for="name") Name
      input.form-control(type="text" name="name" id="name" required value=editRes.name)

    div.form-group
      label(for="phone") Phone Number
      input.form-control(type="text" name="phone" id="phone" value=editRes.phone)

    div.form-group
      label(for="email") Email
      input.form-control(type="email" name="email" id="email" required value=editRes.email)

    div.form-group
      label(for="date") Date
      input.form-control(type="date" name="date" id="date" required value=editRes.date)

    div.form-group
      label(for="time") Time
      input.form-control(type="time" name="time" id="time" required value=editRes.time)

    div.form-group
      label(for="guests") Number of Guests
      input.form-control(type="number" name="guests" id="guests" min="1" required value=editRes.guests)

    div.form-group
      label(for="message") Message
      textarea.form-control(name="message" id="message")= editRes.message

    button.btn.btn-primary(type="submit") Update Reservation
    a.btn.btn-secondary(href="/admin/reservation") Cancel
