extends ../layout.pug

block content
  h1 Add New Reservation
  form(action="/admin/reservation/add/submit" method="POST")
    div.form-group
      label(for="name") Name
      input.form-control(type="text" name="name" id="name" required placeholder="Enter guest name")

    div.form-group
      label(for="phone") Phone Number
      input.form-control(type="text" name="phone" id="phone" placeholder="Enter phone number")

    div.form-group
      label(for="email") Email
      input.form-control(type="email" name="email" id="email" required placeholder="Enter email address")

    div.form-group
      label(for="date") Date
      input.form-control(type="date" name="date" id="date" required)

    div.form-group
      label(for="time") Time
      input.form-control(type="time" name="time" id="time" required)

    div.form-group
      label(for="guests") Number of Guests
      input.form-control(type="number" name="guests" id="guests" min="1" required placeholder="Enter number of guests")

    div.form-group
      label(for="message") Message
      textarea.form-control(name="message" id="message" rows="3" placeholder="Additional message or request...")

    button.btn.btn-success(type="submit") Add Reservation
    a.btn.btn-secondary(href="/admin/reservation") Cancel
