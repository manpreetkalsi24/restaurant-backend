extends ../layout.pug

block content
  h1.page-title Add New Reservation

  .form-card
    form(method="POST", action="/admin/reservation/add/submit")

      .form-group
        label(for="name") Name
        input(
          type="text",
          id="name",
          name="name",
          placeholder="Enter guest name",
          required
        )

      .form-group
        label(for="phone") Phone number
        input(
          type="text",
          id="phone",
          name="phone",
          placeholder="Enter phone number"
        )

      .form-group
        label(for="email") Email
        input(
          type="email",
          id="email",
          name="email",
          placeholder="Enter email address",
          required
        )

      .form-group
        label(for="date") Date
        input(
          type="date",
          id="date",
          name="date",
          required
        )

      .form-group
        label(for="time") Time
        input(
          type="time",
          id="time",
          name="time",
          required
        )

      .form-group
        label(for="guests") Number of guests
        input(
          type="number",
          id="guests",
          name="guests",
          min="1",
          placeholder="Enter number of guests",
          required
        )

      .form-group
        label(for="message") Message
        textarea(
          id="message",
          name="message",
          rows="4",
          placeholder="Additional message or request"
        )

      .form-actions
        button.btn-primary(type="submit")
          |  Add Reservation

        a.btn-secondary(href="/admin/reservation")
          |  Cancel
