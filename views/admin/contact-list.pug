extends ../layout.pug

block content
  h1 Contact Messages
  if contacts.length
    table.table.table-striped
      thead
        tr
          th First Name
          th Last Name
          th Email
          th Message
          th Date
          th Actions
      tbody
        each contact in contacts
          tr
            td= contact.firstName
            td= contact.lastName
            td= contact.email
            td= contact.message
            td= new Date(contact.createdAt).toLocaleString()
            td
              a.btn.btn-danger(href=`/admin/contacts/delete?contactId=${contact._id}` onclick="return confirm('Are you sure you want to delete this message?')") Delete
  else
    p No contact messages yet.
