extends ../layout.pug

block content
  h1.page-title Reservation List

  .page-actions
    a.btn-primary(href="/admin/reservation/add")
      |  Add Reservation

  table.menu-table
    thead
      tr
        th Name
        th Phone
        th Email
        th Date
        th Time
        th Guests
        th Message
        th Actions
    tbody
      each reservation in reservations
        tr
          td= reservation.name
          td= reservation.phone || "-"
          td= reservation.email
          td= reservation.date
          td= reservation.time
          td= reservation.guests
          td= reservation.message || "-"
          td
            a.btn-edit(href=`/admin/reservation/edit/${reservation._id}`)
              |  Edit
            a.btn-delete(
              href=`/admin/reservation/delete/${reservation._id}`
              onclick="return confirm('Are you sure you want to delete this reservation?')"
            )
              |  Delete
