extends ../layout

block content
  h2 Edit Menu Item
  form(action="/admin/menu/edit/submit" method="POST")
    div
      input(type="hidden" name="itemId" value=editItem._id)
      label(for="name") Name : 
      input(type="text" name="name" value=editItem.name required)
    div
      label(for="category") Category : 
      input(type="text" name="category" value=editItem.category)
    div
      label(for="price") Price : 
      input(type="number" step="0.01" name="price" value=editItem.price)
    div
      label(for="description") Description : 
      textarea(name="description")= editItem.description
    button(type="submit") Update
    a.button.btn(href="/admin/menu") Cancel
